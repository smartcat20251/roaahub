                        <li class="nav-item"><a class="nav-link roaahub-btn-primary" runat="server" href="~/requestDemo.aspx">Request Demo</a></li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main>
            <asp:ContentPlaceHolder ID="MainContent" runat="server" />
        </main>

        <!-- Footer -->
        <footer class="roaahub-footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <h4>Roaahub by Smartcat</h4>
                        <p>Saudi Arabia's leading IoT and fleet tracking platform, providing innovative solutions for businesses across multiple industries.</p>
